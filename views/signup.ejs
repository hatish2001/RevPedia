<%-include("partials/header.ejs");%>
<link rel="stylesheet" type="text/css" href="/css/login.css">
 <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center"><b>Sign Up<b></h5>
            <form class="form-signin" action="/signup" method="POST" id="signupform" enctype="multipart/form-data">
              <div class="form-label-group">
                <input type="text" id="inputEmail" class="form-control" placeholder="username" required autofocus name="username">
               
            </div>
              <div class="form-label-group">
                <input type="file" id="inputEmail"  placeholder="Choose profile pic " required autofocus name="image">

              </div>
              <div class="form-label-group">
                <input type="password" id="inputPassword" class="form-control" placeholder="Password" required name="password">
              </div>
              <div class="form-label-group">
                <input type="text" id="inputEmail" class="form-control" placeholder="Enter your name" required autofocus name="name">

              </div>
              <div class="form-label-group">
                <input type="text" id="inputEmail" class="form-control" placeholder="email" required autofocus name="email">

              </div>
              <div class="form-label-group">
                <input type="text" id="inputEmail" class="form-control" placeholder="Enter your phone number" required autofocus name="phoneno">

              </div>

              

              <div class="custom-control custom-checkbox mb-3">
                <input type="checkbox" class="custom-control-input" id="customCheck1">
                <label class="custom-control-label" for="customCheck1">Remember password</label>
              </div>
              <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Sign Up</button>
              <hr class="my-4">
              <button class="btn btn-lg btn-google btn-block text-uppercase" type="submit"><i class="fab fa-google mr-2"></i> Sign in with Google</button>
              <button class="btn btn-lg btn-facebook btn-block text-uppercase" type="submit"><i class="fab fa-facebook-f mr-2"></i> Sign in with Facebook</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

<%-include("partials/footer.ejs");%>